{
  "compilerOptions": {
    "target": "ESNext",
    "module": "amd",
    "moduleResolution": "node",
    "isolatedModules": false,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*" : ["./src/types/*"]
    }
  }
}
